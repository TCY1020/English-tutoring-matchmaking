<div class="row" id="search-bar">
  <div class="col-12">
    <!--讓form往search路由發送-->
    <form action="/user/course">
      <div class="input-group mb-3">
        <!-- name="keyword" 設定參數名稱-->
        <!-- value="{{keyword}}" 預設input值-->
        <input type="text" name="keyword" class="form-control" placeholder="Enter Teacher name to search..."
          aria-label="Teacher Name..." value="{{keyword}}" aria-describedby="search-button">
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="submit" id="search-button">Search</button>
        </div>
      </div><!--設定參數名稱--><!--預設input值-->
    </form>
  </div>
</div>

<div class="row mt-3">
{{#each coursesData}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <a href="/user/course/{{this.id}}">
        <img class="card-img-top img-fluid" src="{{this.User.avatar}}" alt="Card image cap" width="286px" height="180px"
          style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </a>
      <div class="card-body">
        <p class="card-text">
          <a href="/user/course/{{this.id}}">
            {{this.User.name}} 
          </a>
        </p>
        <p><strong>課程名稱 :</strong> {{this.courseName}}</p>
        <span class="badge bg-danger">開課日期 : {{this.courseDate}}</span></h1>
        <span class="badge bg-warning  ">國籍 : {{this.User.country}}</span>
        <p class="card-text text-truncate">{{this.User.teachingStyle}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>




